{
  "name": "detection",
  "version": "4.1.0",
  "description": "Listen to USB devices and detect changes on them.",
  "main": "index.js",
  "types": "index.d.ts",
  "gypfile": true,
  "scripts": {
    "install": "prebuild-install || node-gyp rebuild",
    "prepublishOnly": "npm run validate",
    "validate": "eslint **/*.js && npm test",
    "test": "jasmine ./test/test.js",
    "prebuild": "prebuild --all --strip --verbose",
    "rebuild": "node-gyp rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thienducee/node-usb-detection.git"
  },
  "keywords": [
    "usb",
    "device",
    "hardware",
    "list",
    "insert",
    "add",
    "remove",
    "change",
    "plug",
    "unplug",
    "notification"
  ],
  "homepage": "https://github.com/thienducee/node-usb-detection",
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "bindings": "^1.3.0",
    "eventemitter2": "^5.0.1",
    "nan": "^2.10.0",
    "prebuild-install": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "eslint": "^4.19.1",
    "jasmine": "^3.1.0",
    "node-gyp": "^3.8.0",
    "prebuild": "^8.0.1"
  }
}
